{
  "name": "eslint-disable-commenter",
  "version": "0.1.7",
  "description": "Add ESLint disable comments to existing files.",
  "bugs": {
    "url": "https://github.com/dyoshikawa/eslint-disable-commenter/issues"
  },
  "homepage": "https://github.com/dyoshikawa/eslint-disable-commenter/#readme",
  "bin": {
    "eslint-disable-commenter": "dist/index.js"
  },
  "private": false,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "node -r esbuild-register src/index.ts",
    "build": "esbuild src/index.ts --sourcemap --platform=node --target=node14 --outfile=dist/index.js",
    "check:js": "prettier -c . && eslint --cache '**/*.ts'",
    "fix:check:js": "prettier --write . && eslint --cache --fix '**/*.ts'",
    "check:type": "tsc --noEmit",
    "check:secret": "secretlint '**/*'",
    "check": "run-p check:*",
    "version:new": "npm version ${VERSION} && npm i"
  },
  "author": "dyoshikawa",
  "license": "MIT",
  "dependencies": {
    "commander": "9.0.0",
    "lodash.uniq": "4.5.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.1",
    "@types/eslint": "8.4.1",
    "@types/lodash.uniq": "4.5.6",
    "@types/node": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "esbuild": "0.14.21",
    "esbuild-register": "3.3.2",
    "eslint": "8.9.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "secretlint": "4.1.4",
    "typescript": "4.5.5"
  },
  "volta": {
    "node": "16.14.0",
    "npm": "8.5.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "bash -c 'npm run fix:check:js'",
      "bash -c 'npm run check'"
    ]
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "keywords": [
    "eslint",
    "eslint comment",
    "refactoring"
  ]
}
